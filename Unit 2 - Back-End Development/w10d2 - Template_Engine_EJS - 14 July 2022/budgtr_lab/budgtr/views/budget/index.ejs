<%- include('../partials/header'); -%>

<h1 class="text-xl text-center mb-5">All Budgets</h1>

<table class="table-auto mx-auto">
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
        <% budgets.forEach((b, idx) => { %>
        <tr>
            <td><%= b.date %></td>
            <td><a href="/budgets/<%= idx %>"><%= b.name %></a></td>
            <td><%= b.amount %></td>
        </tr>
        <% }) %>
    </tbody>
  </table>

<%- include('../partials/footer'); -%>
